{% extends 'base.html.twig' %}

{% block body %}
   <div class ="container">
       <div>
           <h1>The Ark Project</h1>
       </div>
       <div>
           <form action="/login" 
            method="POST" 
            name="_login">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <input type="hidden" name="_target_path" value="application" />
               <div class="form-group">
                   <label for="username">Username</label>
                   <input type="username" class="form-control" name="username" id="username">                    
               </div>
               <div class="form-group">
                   <label for="pwd">Password</label>
                   <input type="password" class="form-control" name="pwd" id="pwd">
               </div>
               <button class="btn btn-primary" type="submit">
                    Login
               </button>
            </form><br/>
            
            <div>
                <form action="/register"
                      method="POST"
                      name="_register">
                    <div class="form-group">
                        <label for="username">Create a Username</label>
                        <input type="username" class="form-control" name="username" id="username">                    
                    </div>
                    <div class="form-group">
                        <label for="pwd">Input a Password</label>
                        <input type="password" class="form-control" name="pwd" id="pwd">
                    </div>
                    <div class="form-group">
                        <label for="Cpwd">Confirm Your Password</label>
                        <input type="password" class="form-control" name="pwd" id="Cpwd">
                    </div>
                    <div class='form-group'>
                        <label for="email">Input an Email</label>
                        <input type="email" class="form-control" name='email' id="email">
                    </div>
                    <button class="btn btn-primary" type="submit">
                        Register
                    </button>
                </form>
            </div>

           
       </div>
   </div>
{% endblock %}


